<div class="contents row">
  <% @cookings.each do |cooking| %>
    <div class="content_post" style="background-image: url(<%= cooking.image %>);">
    <div class="more">
        <span><%= image_tag 'cake.jpg' %></span>
        <ul class="more_list">
           <li>
            <%= link_to '詳細', cooking_path(cooking.id) %>
          </li>
          <li>
            <%= link_to '編集', edit_cooking_path(cooking.id) %>
          </li>
          <li>
            <%= link_to '削除', cooking_path(cooking.id), data: { turbo_method: :delete } %>
          </li>
        </ul>
      </div>
      <p><%= cooking.text %></p>
      <span class="name">
        <%= cooking.name %>
      </span>
    </div>
  <% end %>
</div>